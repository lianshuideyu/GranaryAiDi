<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gift_top"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/ic_present_7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gift_festival"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_present_1" />

            <ImageView
                android:id="@+id/iv_gift_love"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_present_2" />

            <ImageView
                android:id="@+id/iv_gift_brithday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_present_3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gift_fridends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_present_4" />

            <ImageView
                android:id="@+id/iv_gift_child"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_present_5" />

            <ImageView
                android:id="@+id/iv_gift_parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_present_6" />

        </LinearLayout>


        <ImageView
            android:id="@+id/ll_setting_gift"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_gift_remind_entrance" />
    </LinearLayout>

</ScrollView>