<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_magazine_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.atguigu.granaryaidi.view.Activity.MagazineTwoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#E9ECF0"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/iv_a"
                android:src="@drawable/icon_topic_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#33b3b8bc" />

            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#33ccd0d4"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_b"
                android:src="@drawable/icon_topic_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#33b3b8bc" />

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#33ccd0d4"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
    <!--ViewPagerIndicator-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_magazine"
        style="@style/MyCustomTabLayout2"
        android:layout_width="match_parent"
        android:layout_height="35dp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_magazine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#15171A"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/abc_ic_go_search_down"
            android:text="杂 志"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
