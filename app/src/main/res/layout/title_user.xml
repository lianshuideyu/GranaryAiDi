<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_basetitle"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FB7299"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_denglu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/ic_drawer_home" />

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bili_default_avatar" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="未登陆"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_tv"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:background="@null"
        android:src="@drawable/ic_fab_play" />

    <ImageButton
        android:id="@+id/ib_game"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:background="@null"
        android:src="@drawable/ic_menu_top_game_center" />

    <ImageButton
        android:id="@+id/ib_download"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:background="@null"
        android:src="@drawable/ic_toolbar_menu_download" />

    <ImageButton
        android:id="@+id/ib_serach"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:background="@null"
        android:src="@drawable/ic_toolbar_menu_search" />
</LinearLayout>