<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atguigu.granaryaidi">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".common.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".view.Activity.ShopWebviewActivity" />
        <activity android:name=".view.Activity.ShopTypeActivity" />
        <activity android:name=".view.Activity.ShopPinpaiActivity" />
        <activity android:name=".view.Activity.DarenDetailsActivity" />
        <activity android:name=".view.Activity.GoodsDetailsActivity" />
        <activity android:name=".view.Activity.MagazineTwoActivity" />
        <activity android:name=".view.Activity.MagazineAuthorActivity" />
        <activity
            android:name=".view.Activity.GoodsGotoBuyActivity"
            android:theme="@style/Activity_transparentmy" />
        <activity android:name=".cart.ShopCartActivity" />
        <activity android:name=".view.Activity.ShowImageAndGifActivity" />
        <activity android:name=".cart.IndentDetailActivity"></activity>

        <!-- alipay sdk begin 当手机没有装支付宝的时候会调用网页支付-->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
    </application>

</manifest>